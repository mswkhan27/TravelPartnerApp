<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WonderWorldaActivity" android:id="@+id/container"
    android:background="@color/backgroundColor"
    android:layout_margin="0dp"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/customBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_Bar_Height"
        android:shadowColor="#cccccc"
        app:cardBackgroundColor="@color/customerBarColor"
        android:elevation="8dp">

        <TextView
            android:layout_margin="0dp"
            android:id="@+id/CustomeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Great Wall of China"
            android:gravity="center"
            android:paddingLeft="@dimen/action_Bar_Text_Left_Padding"
            android:textSize="@dimen/action_Bar_Text_Size"
            android:textColor="#FFFFFF"/>
    </androidx.cardview.widget.CardView>
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WonderWorldaActivity"
        />



</RelativeLayout>










