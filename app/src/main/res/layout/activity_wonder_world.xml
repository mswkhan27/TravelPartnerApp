<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WonderWorldActivity" android:id="@+id/container"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:id="@+id/customBar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#cccccc"

        android:layout_marginTop="40dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/CustomeText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity="left|center"
            android:src="@drawable/whitelogo"
            android:paddingLeft="@dimen/action_Bar_Text_Left_Padding"
            android:textSize="@dimen/action_Bar_Text_Size"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/FlFragmentArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/customBar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/fragment_Container_Margin"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="WONDERS OF THE WORLD"
                android:textColor="@color/backgroundColor"
                android:textStyle="bold"

                >


            </TextView>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"

                >
                <ImageButton
                    android:onClick="greatWall"
                    android:id="@+id/greatWallMap"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/gchina"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>
                <ImageButton
                    android:onClick="christRedeemer"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/christ"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    >

                </ImageButton>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"

                >
                <ImageButton
                    android:onClick="Roman"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/rome"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>
                <ImageButton

                    android:onClick="taj"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/tmal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
               android:layout_marginTop="10dp"
                >
                <ImageButton

                    android:onClick="leanTower"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/ltower"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>
                <ImageButton

                    android:onClick="effelTower"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/etower"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
               android:layout_marginTop="10dp"
                >
                <ImageButton

                    android:onClick="chichenItza"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:background="@drawable/citza"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                </ImageButton>

                <ImageButton

                    android:onClick="machuPicchu"
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/mpich">

                </ImageButton>



            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</RelativeLayout>